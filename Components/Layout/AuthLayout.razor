@inherits LayoutComponentBase
@inject AuthenticationService authService
@inject NavigationManager nav
@inject IJSRuntime JS

@if (isCheckingAuth)
{
    <div class="auth-redirect">
        <i class="fas fa-spinner fa-spin"></i>
        <p>Checking authentication...</p>
    </div>
}
else if (authService.IsAuthenticated)
{
    <div class="page">
        <div class="sidebar">
            <NavMenu />
        </div>

        <main>
            <div class="top-actions px-4">
                <div class="user-info">
                    <i class="fas fa-user-circle"></i>
                    <span>@authService.CurrentUser?.Username</span>
                </div>
                <button class="btn btn-outline-primary theme-toggle-btn" @onclick="ToggleTheme" title="Toggle Theme">
                    <i class="fas fa-moon" id="theme-icon"></i>
                    <span id="theme-text">Dark Mode</span>
                </button>
                <button class="btn btn-outline-danger sign-out-btn" @onclick="SignOut" title="Sign Out">
                    <i class="fas fa-sign-out-alt"></i>
                    Sign Out
                </button>
            </div>

            <article class="content px-4">
                @Body
            </article>
        </main>
    </div>
}
else
{
    <div class="auth-redirect">
        <p>Redirecting to login...</p>
    </div>
}

@code {
    private bool isCheckingAuth = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Try to restore session if not authenticated
            if (!authService.IsAuthenticated)
            {
                var restored = await authService.RestoreSessionAsync();
                if (!restored)
                {
                    isCheckingAuth = false;
                    await Task.Delay(100); // Small delay to ensure state updates
                    nav.NavigateTo("/login", forceLoad: true);
                    return;
                }
            }
            
            isCheckingAuth = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            // Log error and redirect to login on any exception
            System.Diagnostics.Debug.WriteLine($"Error in AuthLayout initialization: {ex}");
            System.Diagnostics.Debug.WriteLine($"Stack trace: {ex.StackTrace}");
            isCheckingAuth = false;
            await Task.Delay(100);
            nav.NavigateTo("/login", forceLoad: true);
        }
    }

    private async Task ToggleTheme()
    {
        await JS.InvokeVoidAsync("toggleTheme");
        StateHasChanged();
    }

    private void SignOut()
    {
        authService.SignOut();
        nav.NavigateTo("/login", forceLoad: true);
    }
}
