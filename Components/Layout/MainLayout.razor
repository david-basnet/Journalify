@inherits LayoutComponentBase
@inject IJSRuntime JS

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-actions px-4" style="display:flex; justify-content:flex-end; gap:12px; padding-top:12px;">
            <button class="btn btn-outline-primary" @onclick="ToggleTheme">Toggle Theme</button>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private async Task ToggleTheme()
    {
        await JS.InvokeVoidAsync("toggleTheme");
    }
}
